{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "npm: build"
        },
        {
            "name": "Debug postbuild step",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}", 
            "env": { 
                "NODE_ENV": "test" 
            }, 
            "args": [ 
                "${workspaceFolder}/postBuildStep.ts", "debug"
            ], 
            "runtimeArgs": [ 
                "--nolazy", "-r", "ts-node/register" ,
            ], 
            "sourceMaps": true, 
            "protocol": "inspector" ,
            "preLaunchTask": "npm: build-wp"
        },
        {
            "name": "Launch Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
                "--config",
                "package.json",
                "--runInBand"
            ],
            "runtimeArgs": [
                "--nolazy"
            ],
            "console": "internalConsole",
            "env": {
                "NODE_ENV": "test"
            },
            "smartStep": false
        }
    ]
}

